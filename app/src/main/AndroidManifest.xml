<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.ahoi.pantry">

    <application
            android:name=".PantryApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Pantry">
        <activity android:name=".profile.ui.details.ProfileActivity"></activity>
        <activity
                android:name=".shopping.ui.listdetails.ListDetailsActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".shopping.ui.mylists.ShoppingListsActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".recipes.ui.details.RecipeDetailsActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".profile.ui.CreateInvitationActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".profile.ui.MyInvitationsActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".recipes.ui.addsteps.AddStepsToRecipeActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".ingredients.ui.addingredient.AddIngredientActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".ingredients.ui.CreateIngredientActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".recipes.ui.myrecipes.MyRecipesActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".recipes.ui.edit.CreateOrEditRecipeActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".launch.LaunchActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".launch.LandingActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".auth.login.LoginActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".auth.signup.CreateAccountActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".HomeActivity"
                android:screenOrientation="portrait" />
    </application>

</manifest>